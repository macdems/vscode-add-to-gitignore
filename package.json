{
	"name": "add-to-gitignore",
	"displayName": "Add to GIT ignore",
	"description": "Add file to .gitignore",
	"publisher": "maciejdems",
	"repository": {
		"type": "git",
		"url": "https://github.com/macdems/vscode-add-to-gitignore.git"
	},
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:explorer",
		"onCommand:addToGitignore.addFileToGitIgnore",
		"onCommand:addToGitignore.addFileToGitExclude"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "addToGitignore.addFileToGitIgnore",
				"title": "Add to .gitignore..."
			},
			{
				"command": "addToGitignore.addFileToGitExclude",
				"title": "Add to .git/info/exclude..."
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "addToGitignore.addFileToGitIgnore",
					"group": "git"
				},
				{
					"command": "addToGitignore.addFileToGitExclude",
					"group": "git"
				}
			],
			"commandPalette": []
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"package": "vsce package",
		"publish": "vsce publish"
		},
	"devDependencies": {
		"@types/vscode": "^1.51.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
